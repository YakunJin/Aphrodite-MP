/* components/myDate/myDate.wxss */
.my-date-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.date-section {
  width: 100%;
  height: 20%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
}

.date-item-container {
  width: 150rpx;
  display: inline-block;
  border-right: 1rpx solid darkgray;
}

.date-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-items: center;
  color: black;
}

.date-item.active {
  /* background-color: rgb(138, 184, 221); */
  color: #9b54ba;
}


.date-item-split-line{
  height: 100%;
}

.date-text{
  text-align: center;
}

.scedule-hour-section {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
  margin-top: 30rpx;
}

.hour-item {
  border: 1rpx solid black;
  border-radius: 15%;
  width: 30%;
  text-align: center;
  /* background-color: lightblue; */
  line-height: 2;
  margin-bottom: 20rpx;
  color: black;
}

.hour-item.active {
  color: #9b54ba;
  border: 1rpx solid #9b54ba;
}