/* miniprogram/pages/personal/personal.wxss */
.userinfo {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.join-application {
  margin-top: 40rpx;
  height: 80rpx;
  width: 100%;
  background-color: #dad7da;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  font-size: 30rpx;
}

.bind-phone-button {
  width: 60rpx;
  height: 60rpx;
  position: relative;
  right: -65%;
}

.middle-section {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.middle-item {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border: 1rpx solid lightgray; */
  background-color: white;
}

.middle-item-image {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 20rpx 20rpx 0;
}

.middle-item-text {
  font-size: 40rpx;
}

.middle-item-split-line {
  height: 100%;
  border: 0.5rpx solid lightgray;
}