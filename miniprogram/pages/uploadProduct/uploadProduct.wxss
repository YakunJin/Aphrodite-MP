/* miniprogram/pages/uploadProduct/uploadProduct.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: space-around;
}

.upload-product-button {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.product-info-container {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  width: 100%;
  height: 60%;
  align-items: center;
}

.product-info-section {
  display: flex;
  justify-content: space-around;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  text-align: left;
  width: 85%;
  height: 30%;
}

.input-field {
  width: 100%;
  height: 100%;
}
