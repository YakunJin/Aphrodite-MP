/* miniprogram/pages/productDetail/productDetail.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
}

.product-detail-container {
  height: 80%;
  display: flex;
  flex-direction: column;
  width: 90%;
}

.product-image{
  width: 100%;
  height: 90%;
}

.product-desc{
  font-size: 35rpx;
}

.action-bar {
  position: fixed;
  width: 100%;
  height: 80rpx;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  margin-bottom: 24rpx;
}

.split-line {
  line-height: 80rpx;
}
